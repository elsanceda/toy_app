<div id="toy-carousel" class="carousel slide" data-ride="carousel">
    <ol id="carouselInd" class="carousel-indicators">
        <% @toy.images.each_with_index do |image, i| %>
            <li data-target="#toy-carousel" data-slide-to="<%= i %>" class="<%= i == 0 ? 'active' : '' %>"></li>
        <% end %>
    </ol>

    <div class="carousel-inner">
        <% @toy.images.each_with_index do |image, i| %>     
            <div class="item <%= i == 0 ? 'active' : '' %>">
                <%= image_tag image.variant(:display) %>
            </div>
        <% end %>
    </div>

    <a id="carouselPrev" class="carousel-control-prev" href="#toy-carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a id="carouselNext" class="carousel-control-next" href="#toy-carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
</div>