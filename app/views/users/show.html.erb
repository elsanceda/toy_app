<% provide(:title, @user.name) %>
<div class="row">
    <aside class="col-md-3">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
        </section>
    </aside>
    <div class="col-md-9">
        <% if @user.toys.any? %>
            <h3>Toys (<%= @user.toys.count %>)</h3>
            <div class="row">
                <%= render @toys %>
            </div>

            <%= will_paginate @toys %>
        <% end %>
    </div>
</div>